<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Login Registration Mean</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <style>
            .header {
                color: teal;
                font-size: 27px;
                padding: 10px;
            }
            .error {
                color: red;
                margin-left: 30px;
            }
            .row {
                width: 400px;
                display: inline-block;
                /* border: 2px solid teal; */
                margin: 30px;
                border-radius: 10px;
                background-color: lightgray;
            }
            .login_right {
                display: inline-block;
            }
            label{
                color: teal;
            }
            .btn-teal {
                background-color: teal;
                border: 1px solid teal;
                color: white; 
            } 
        </style>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="well well-sm">
                        <form action='/register' class="form-horizontal" method="post">
                            <fieldset>
                                <legend class="text-center header">Register</legend>
        
                                <div class="form-group">
                                    <div class="col-md-8">
                                        <label>First Name:</label>
                                        <input id="fname" name="first" type="text" value="" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-8">
                                        <label>Last Name:</label>
                                        <input id="lname" name="last" type="text" value="" class="form-control">
                                    </div>
                                </div>
        
                                <div class="form-group">
                                    <div class="col-md-8">
                                        <label>Email:</label>
                                        <input id="email" name="email" type="text" value="" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-8">
                                        <label>Birthday:</label>
                                        <input id="birthday" name="birthday" type="date" class="form-control">
                                    </div>
                                </div>
        
                                <div class="form-group">
                                    <div class="col-md-8">
                                        <label>Password:</label>
                                        <input id="password" name="password" type="password" value="" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-8">
                                        <label>Confirm Password:</label>
                                        <input id="confirm" name="confirm" type="password" class="form-control">
                                    </div>
                                </div>
        
                                <div class="form-group">
                                    <div class="col-md-12 text-center">
                                        <button type="submit" class="btn btn-lg btn-teal">Submit</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="well well-sm">
                        <form action='/login' class="form-horizontal" method="post">
                            <fieldset>
                                <legend class="text-center header">Login</legend>
        
                                <div class="form-group">
                                    <div class="col-md-8">
                                        <label>Email:</label>
                                        <input id="email" name="email" type="text" class="form-control">
                                    </div>
                                </div>
        
                                <div class="form-group">
                                    <div class="col-md-8">
                                        <label>Password:</label>
                                        <input id="password" name="password" type="password" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12 text-center">
                                        <button type="submit" class="btn btn-lg btn-teal">Submit</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="errors">
                <% JSON.stringify(messages) %> 
                    <% if(messages.errorMsg) { %>
                        <% for (var x of messages.errorMsg) { %>
                        <p class="error"><%= x %></p>
                    <% } %>
                <% } %>
            </div>
        </div>
    </body>
</html>